{
  "name": "stardew-modding-schema",
  "displayName": "Stardew Modding Schema",
  "description": "Adds schema to content patcher files",
  "version": "1.0.0",
  "publisher": "BSavage81",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onFile:content.json",
    "onFile:manifest.json"
  ],
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ],
        "aliases": [
          "JSON",
          "json"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "content.json"
        ],
        "url": "https://smapi.io/schemas/content-patcher.json"
      },
      {
        "fileMatch": [
          "**/subfolder/*.json"
        ],
        "url": "https://smapi.io/schemas/content-patcher.json"
      },
      {
        "fileMatch": [
          "manifest.json"
        ],
        "url": "https://smapi.io/schemas/manifest.json"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^4.0.0",
    "vscode-test": "^1.6.2"
  }
}
