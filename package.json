{
  "name": "stardew-modding-schema",
  "displayName": "Stardew Modding Schema",
  "description": "Adds schema to content patcher files",
  "version": "1.2.1",
  "publisher": "BSavage81",
  "engines": {
    "vscode": "^1.80.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.0",
    "vscode-json-languageservice": "^5.3.7"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsavage81/stardew-modding-schema.git"
  },
  "bugs": {
    "url": "https://github.com/bsavage81/stardew-modding-schema/issues"
  },
  "homepage": "https://github.com/bsavage81/stardew-modding-schema#readme",
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onFile:content.json",
    "onFile:manifest.json"
  ],
  "contributes": {
    "configuration": {
      "title": "Stardew Modding Schema",
      "properties": {
        "stardewModdingSchema.unlockableBundles.shopTypesPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to Unlockable Bundles ShopTypes.json (usually .../Mods/Unlockable Bundles/assets/Data/ShopTypes.json). Used to suggest ShopType values from built-in UB themes."
        }
      }
    },
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ],
        "aliases": [
          "JSON",
          "json"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "**/content.json"
        ],
        "url": "./schemas/stardew-content.schema.json"
      },
      {
        "fileMatch": [
          "**/data/*.json"
        ],
        "url": "./schemas/stardew-content.schema.json"
      },
      {
        "fileMatch": [
          "**/manifest.json"
        ],
        "url": "https://smapi.io/schemas/manifest.json"
      },
      {
        "fileMatch": [
          "**/i18n/*.json"
        ],
        "url": "https://smapi.io/schemas/i18n.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0"
  },
  "__metadata": {
    "isApplicationScoped": false,
    "installedTimestamp": 1733349586971,
    "pinned": true,
    "source": "vsix",
    "size": 41899314
  }
}
