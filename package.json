{
  "name": "stardew-modding-schema",
  "displayName": "Stardew Modding Schema",
  "description": "Adds schema validation for Content Patcher, Unlockable Bundles, Furniture Framework.",
  "version": "1.3.0",
  "publisher": "BSavage81",
  "engines": {
    "vscode": "^1.80.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.0",
    "vscode-json-languageservice": "^5.3.7"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsavage81/stardew-modding-schema.git"
  },
  "bugs": {
    "url": "https://github.com/bsavage81/stardew-modding-schema/issues"
  },
  "homepage": "https://github.com/bsavage81/stardew-modding-schema#readme",
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onFile:content.json",
    "onFile:manifest.json"
  ],
  "contributes": {
    "configuration": {
      "properties": {
        "stardewModdingSchema.modsRoot": {
          "type": "string",
          "default": "",
          "description": "Absolute path to your Stardew Valley Mods folder. Used to discover installed mod item IDs for hover/completion."
        }
      }
    },
    "commands": [
      {
        "command": "stardewModdingSchema.rebuildInstalledItemIndex",
        "title": "Stardew Modding Schema: Rebuild Installed Item Index"
      }
    ],
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ],
        "aliases": [
          "JSON",
          "json"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "{{modsRoot}}/**/i18n/*.json",
          "{{modsRoot}}/**/i18n/*/*.json",
          "{{modsRoot}}/**/i18n/*/**/*.json"
        ],
        "url": "https://smapi.io/schemas/i18n.json"
      },
      {
        "fileMatch": [
          "{{modsRoot}}/**/*.json"
        ],
        "url": "./schemas/stardew-content.schema.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0"
  }
}
