    },
    "FrontBody": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/BodyModel"
    },
    "LeftBody": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/BodyModel"
    }
  },

  "required": [ "Name" ],

  "anyOf": [
    { "required": [ "FrontBody" ] },
    { "required": [ "BackBody" ] },
    { "required": [ "LeftBody" ] },
    { "required": [ "RightBody" ] }
  ]
