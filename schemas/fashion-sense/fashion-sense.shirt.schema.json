// ======================================================================
// fashion-sense.shirt.schema.json
// Schema for Shirts/<ShirtName>/shirt.json
// ======================================================================
{
  "$id": "./fashion-sense.shirt.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fashion Sense â€“ Shirt Content Pack (shirt.json)",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "Name": {
      "type": "string",
      "description": "Name of the shirt."
    },
    "Format": {
      "type": "string",
      "description": "Fashion Sense format version (recommended)."
    },

    "Item": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/ItemProperties"
    },
    "IsLocked": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/IsLocked"
    },

    "BackShirt": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/ShirtModel"
    },
    "RightShirt": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/ShirtModel"
    },
    "FrontShirt": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/ShirtModel"
    },
    "LeftShirt": {
      "$ref": "./fashion-sense.common.schema.json#/definitions/ShirtModel"
    }
  },

  "required": [ "Name" ],

  "anyOf": [
    { "required": [ "FrontShirt" ] },
    { "required": [ "BackShirt" ] },
    { "required": [ "LeftShirt" ] },
    { "required": [ "RightShirt" ] }
  ]
}
